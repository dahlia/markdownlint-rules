{
  "name": "@hongminhee/markdownlint-rules",
  "version": "0.1.4",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./preset": "./src/preset.ts"
  },
  "imports": {
    "markdownlint": "npm:markdownlint@^0.37.0",
    "markdownlint-cli2": "npm:markdownlint-cli2@^0.20.0"
  },
  "exclude": [
    ".claude/",
    ".github/",
    "CLAUDE.md",
    "dist/",
    "pnpm-lock.yaml",
    "tsdown.config.ts"
  ],
  "fmt": {
    "exclude": ["*.md"]
  },
  "tasks": {
    "check-versions": "deno run --allow-read --allow-write scripts/check_versions.ts",
    "check": {
      "dependencies": ["check-versions"],
      "command": "deno check src/**/*.ts && deno lint && deno fmt --check && deno run -A npm:markdownlint-cli2 *.md .claude/**/*.md && deno publish --dry-run --allow-dirty"
    },
    "test": "deno test --allow-read",
    "test:node": "pnpm build && node --experimental-strip-types --test src/**/*.test.ts",
    "test:bun": "pnpm build && bun test",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": {
      "dependencies": ["check"]
    }
  }
}
